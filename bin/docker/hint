#!/usr/bin/env bash
# Add hinting
set -e -o pipefail

/app/bin/print start 'Hinting fonts'
declare -ar source_files=(
  'BrassMono-Italic'
  'BrassMono-Bold'
  'BrassMono-BoldItalic'
)

ttfautohint -I \
  /app/dist/unhinted/BrassMono-Regular.ttf \
  /app/dist/BrassMono/BrassMono-Regular.ttf \

for source_file in "${source_files[@]}"; do
  ttfautohint -I \
    --reference=dist/unhinted/BrassMono-Regular.ttf \
    "/app/dist/unhinted/${source_file}.ttf" \
    "/app/dist/BrassMono/${source_file}.ttf"
done
